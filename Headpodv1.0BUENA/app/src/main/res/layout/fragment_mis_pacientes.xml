    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"

        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"


        ><!--      android:layout_below="@id/layout_btnPestanaIzquierda"--><!--       android:layout_below="@id/layout_btnPestanaIzquierda" -->
        <EditText
            android:id="@+id/editTextBuscarPaciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:hint="@string/buscar_paciente"

            android:textSize="@dimen/text_size_subtitle"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            />

        <ImageView
            android:id="@+id/ojo_buscar"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/descripcion_img_buscar_paciente"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ojo_buscar"
            android:textAlignment="textEnd"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout1"
        android:gravity="center"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        >

        <ImageView
            android:id="@+id/logo_paciente"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/descripcion_img_buscar_paciente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_nuevo_paciente"
            android:tint="@color/colorPrimary"

            android:textAlignment="textEnd"
            />



        <TextView
            android:id="@+id/txtNuevoPaciente"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorSecundadrio"
            android:text="@string/nuevo_paciente"
            android:textSize="@dimen/text_size_subtitle"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayoutAviso"
        android:layout_below="@id/linearLayout2"

        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtAvisoSeleccion"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="@string/select_aviso_paciente"

            android:textSize="@dimen/text_size_subtitle"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutAviso"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/border_mis_pacientes"

        >

        <LinearLayout
            android:id="@+id/relativeLayoutCheck"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.14"
            android:gravity="start"
            >

            <ImageView
                android:id="@+id/checkboxImg"
                android:contentDescription="@string/descripcion_img_buscar_paciente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_check_box_black_35dp"
                android:tint="@color/colorPrimary"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/relativeLayoutImgPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.14">

            <ImageView
                android:id="@+id/imgPerfil"
                android:contentDescription="@string/descripcion_img_buscar_paciente"



                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_face_35dp"
                android:tint="@color/colorPrimary"


                />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/relativeLayoutNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.38"
            >

            <ImageView
                android:id="@+id/triangulo"
                android:contentDescription="@string/descripcion_img_buscar_paciente"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/triangulo_32"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                />



            <TextView
                android:id="@+id/txtNombre"



                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="@string/nombre"
                android:textSize="@dimen/text_size_subtitle"




                /><!-- android:textSize="@dimen/size_text_colum_Name"-->


        </LinearLayout>



        <LinearLayout
            android:id="@+id/relativeLayoutCon_hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"


            >

            <ImageView
                android:id="@+id/cara_sin_hp"
                android:contentDescription="@string/descripcion_img_buscar_paciente"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:srcCompat="@drawable/cabeza_sin_hp_sensor_35x47"

                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/relativeLayoutSin_hp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:gravity="center_horizontal"
            >

            <ImageView
                android:id="@+id/cara_con_hp"

                android:contentDescription="@string/descripcion_img_buscar_paciente"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:paddingBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/cabeza_con_hp_sensor_51_65"
                />


        </LinearLayout>





    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutPacientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:clickable="true"
        android:layout_below="@id/linearLayout3"
        android:orientation="vertical"




        android:weightSum="1">



        <ListView
            android:id="@+id/listViewPacientes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"




            /><!-- android:descendantFocusability="blocksDescendants"
              android:focusable = "false"
            android:focusableInTouchMode = "false"
            -->

        <TextView
            android:id="@+id/txtPacientesEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_standard"
            android:text="@string/lista_mis_pacientes_vacia" />

    </LinearLayout>










</RelativeLayout>

