<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"


    android:layout_centerHorizontal="true"

    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".fragments.MedicionFragment">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadeScrollbars="false"

        android:id="@+id/scrollView"



        android:fillViewport="false"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_gravity="center"

            android:id="@+id/linearLayoutPadre"

            >

            <LinearLayout

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"


                android:gravity="center"

                android:id="@+id/linearLayout4">


                <ImageView
                    android:contentDescription="@string/descripcion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMedicionSinHP"
                    android:src="@drawable/btn_efectos"
                    android:layout_gravity="center_vertical"


                 />



                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:id="@+id/relativeLayout1">


                    <TextView
                        android:id="@+id/txtMedicionSinHp"
                        android:layout_marginStart="@dimen/margin_left_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_subtitle"

                        android:ems="6"
                        android:gravity="center_vertical"
                        android:text="@string/medicion_sin_hp"
                        android:textColor="@color/txt_efecto2"

                        android:layout_alignParentTop="true"
                        />

                    <TextView
                        android:id="@+id/txtMedicionSinHpContenido"

                        android:layout_below="@+id/txtMedicionSinHp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_standard"


                        android:ems="6"

                        android:gravity="center_vertical"
                        android:text="@string/ver_foto_ejemplo"
                        android:textColor="@color/txt_efectos"

                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/txtMedicionSinHp" />

                </RelativeLayout>





                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    >


                    <ImageView
                        android:id="@+id/cara_sin_hp"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/descripcion_button"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"

                        android:layout_gravity="center"
                        android:src="@drawable/medicion_sin_headpod_276"

                        />


                </RelativeLayout>



            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"


                android:gravity="center"
                android:id="@+id/linearLayout5">

                <ImageView
                    android:contentDescription="@string/descripcion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnMedicion"
                    android:src="@drawable/btn_efectos"
                    android:layout_gravity="center_vertical"
                   />

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:id="@+id/relativeLayout2">

                    <TextView
                        android:id="@+id/txtMedicionConHp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_left_home"
                        android:textSize="@dimen/text_size_subtitle"
                        android:ems="6"
                        android:gravity="center_vertical"
                        android:text="@string/medicion_con_hp"
                        android:textColorHint="@color/colorPrimary"
                        android:textColor="@color/txt_efecto2"



                        />

                    <TextView
                        android:id="@+id/txtMedicionConHpContenido"

                        android:layout_below="@+id/txtMedicionConHp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_standard"
                        android:ems="6"
                        android:gravity="center_vertical"
                        android:text="@string/ver_foto_ejemplo"

                        android:textColor="@color/txt_efectos"

                        android:layout_alignParentBottom="true"
                        android:layout_alignStart="@+id/txtMedicionConHp" />


                </RelativeLayout>


         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:gravity="center"
             >


             <ImageView
                 android:id="@+id/cara_con_hp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"




                 android:contentDescription="@string/descripcion_button"
                 android:adjustViewBounds="true"
                 android:scaleType="centerCrop"

                 android:src="@drawable/medicion_con_hp_276"

                 />




         </RelativeLayout>



            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:id="@+id/linearLayout7">
            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:id="@+id/RelativeLayout3">


            </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>



