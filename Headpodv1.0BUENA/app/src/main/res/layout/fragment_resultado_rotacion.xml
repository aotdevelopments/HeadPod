<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context=".fragments.ResultadoRotacionFragment"
    >




    <!--CONTENEDOR ROTACION-->
    <!--***************************************************************************-->


    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/data_fondo"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"

        >

        <TextView
            android:id="@+id/txtTitulo_rotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorSecundadrio"
            android:text="@string/inf_rotacion"
            android:textSize="@dimen/text_size_title"
            android:gravity="center_horizontal"
            />


        <!--IMAGEN ROTACIÓN-->
        <RelativeLayout
            android:id="@+id/imgContenedor_cara_rotation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/imgRotacionResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rangos_rotacion"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true"
                android:rotation="180"
                /><!--rangos_rotacion-->

        </RelativeLayout>
        <!--Fin IMAGEN INCLINACIÓN-->
    </LinearLayout>

    <!--***************************************************************************-->





</LinearLayout>










