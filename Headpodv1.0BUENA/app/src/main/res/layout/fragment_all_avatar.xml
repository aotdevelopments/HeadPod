<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor_fragmentos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context=".fragments.AllAvatarFragment">














    <RelativeLayout
        android:id="@+id/fragmento_barra_temporal"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_cara_3D"
        android:orientation="vertical"
        android:layout_below="@id/fragmento_barra_temporal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_datos"
        android:orientation="vertical"
        android:layout_below="@+id/layout_cara_3D"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtConvulsiones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/convulsiones"
            android:textColor="@color/ColorSecundadrio"
            android:textSize="@dimen/text_size_standard"
            />

        <!--Aquí el valor de las convulsiones-->
        <TextView
            android:id="@+id/convulsiones"

            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@id/txtConvulsiones"
            android:textSize="@dimen/text_size_standard"
            />

        <TextView
            android:id="@+id/txtVelocidadMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtConvulsiones"
            android:layout_marginStart="12dp"
            android:text="@string/velocidad_media"
            android:textColor="@color/ColorSecundadrio"
            android:textSize="@dimen/text_size_standard"
            />

        <!--Aquí el valor de la velocidad media-->
        <TextView
            android:id="@+id/velocidadMedia"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtConvulsiones"
            android:text="0 rad/s"
            android:textColor="@color/colorPrimary"
            android:layout_toEndOf="@id/txtVelocidadMedia"
            android:textSize="@dimen/text_size_standard"
            />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/velocidadMedia"
            android:orientation="vertical"
            >

          <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtAcerleracionX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="6"
                    android:layout_marginStart="12dp"
                    android:text="@string/aceleracion_X"
                    android:textColor="@color/ColorSecundadrio"
                    android:textSize="@dimen/text_size_standard"
                    />
                <!--Aquí el valor de la aceleración primera forma-->
                <TextView
                    android:id="@+id/aceleracion_x"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 g"
                    android:ems="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />

              <TextView
                  android:id="@+id/grados_x"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0 g"
                  android:ems="3"
                  android:textColor="@color/colorPrimary"
                  android:textSize="@dimen/text_size_standard"
                  />

              <TextView
                  android:id="@+id/aceleracion_x_2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ems="3"
                  android:text="0 g"
                  android:textColor="@color/colorPrimary"
                  android:textSize="@dimen/text_size_standard"
                  />

              <TextView
                  android:id="@+id/grados_x_2"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="0 g"
                  android:ems="2"
                  android:textColor="@color/colorPrimary"
                  android:textSize="@dimen/text_size_standard"
                  />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtAcerleracionY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/aceleracion_Y"
                    android:textColor="@color/ColorSecundadrio"
                    android:ems="6"
                    android:textSize="@dimen/text_size_standard"
                    />
                <!--Aquí el valor de la aceleración y version 1-->
                <TextView
                    android:id="@+id/aceleracion_y"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:text="0 g"
                    android:ems="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />

                <TextView
                    android:id="@+id/grados_y"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 g"
                    android:ems="3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />


                <TextView
                    android:id="@+id/aceleracion_y_2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:text="0 g"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />

                <TextView
                    android:id="@+id/grados_y_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:text="0 g"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txtAcerleracionZ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="@string/aceleracion_Z"
                    android:ems="6"
                    android:textColor="@color/ColorSecundadrio"
                    android:textSize="@dimen/text_size_standard"
                    />
                <!--Aquí el valor de la acleración version1-->
                <TextView
                    android:id="@+id/aceleracion_z"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:ems="2"
                    android:text="0 g"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />

                <TextView
                    android:id="@+id/grados_z"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 g"
                    android:ems="3"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />


                <TextView
                    android:id="@+id/aceleracion_z_2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:text="0 g"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />

                <TextView
                    android:id="@+id/grados_z_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 g"
                    android:ems="2"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_standard"
                    />


            </LinearLayout>




















        </LinearLayout>






    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_cara_flexion"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/fragmento_barra_temporal"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_cara_inclinacion"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/layout_cara_flexion"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_cara_rotacion"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/layout_cara_inclinacion"

        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/fragmento_botones_avatar"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </RelativeLayout>





</RelativeLayout>



