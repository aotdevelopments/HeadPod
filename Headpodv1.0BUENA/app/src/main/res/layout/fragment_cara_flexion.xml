<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/contenedor"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:gravity="center_horizontal"
android:orientation="vertical"
android:layout_margin="2dp"
android:background="#ffffff"
tools:context=".fragments.CaraFlexionFragment">




    <ImageView
        android:id="@+id/cara_flexion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:contentDescription="@string/descripcion_button"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cabeza_flexion"/><!-- android:rotation="90"-->



        <TextView
            android:id="@+id/tag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorSecundadrio"
            android:textSize="@dimen/text_size_standard"
            android:gravity="start"
            android:text="Î˜="
            />

        <TextView
            android:id="@+id/angulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorSecundadrio"
            android:textSize="@dimen/text_size_standard"
            android:gravity="start"
            android:text="0"
            android:layout_toEndOf="@id/tag1"

            />


    <TextView
        android:id="@+id/tag2"
        android:layout_below="@id/tag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorSecundadrio"
        android:textSize="@dimen/text_size_standard"
        android:gravity="start"
        android:text="gy="
        />
        <TextView
            android:id="@+id/gy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorSecundadrio"
            android:textSize="@dimen/text_size_standard"
            android:gravity="start"
            android:text="0"
            android:layout_below="@id/tag1"
            android:layout_toEndOf="@id/tag2"
            />


    <TextView
        android:id="@+id/tag3"
        android:layout_below="@id/tag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorSecundadrio"
        android:textSize="@dimen/text_size_standard"
        android:gravity="start"
        android:text="gy+="
        />


        <TextView
            android:id="@+id/gyMaxPos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorSecundadrio"
            android:textSize="@dimen/text_size_standard"
            android:gravity="start"
            android:layout_below="@id/tag2"
            android:layout_toEndOf="@id/tag3"
            android:text="0"
            />

        <TextView
        android:id="@+id/tag4"
        android:layout_below="@id/tag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorSecundadrio"
        android:textSize="@dimen/text_size_standard"
        android:gravity="start"
        android:text="gy-="
        />



    <TextView
        android:id="@+id/gyMaxNeg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/ColorSecundadrio"
        android:textSize="@dimen/text_size_standard"
        android:gravity="start"
        android:ems="4"
        android:layout_below="@id/tag3"
        android:layout_toEndOf="@id/tag4"
        android:text="0"
        />









</RelativeLayout>