<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    tools:context="com.siestasystemheadpod.headpodv10.adicionales.perfil.DialogChangePassword"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageLogo"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/descripcion_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_headpod_con_leyenda" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/cambiar_password"
        android:textColor="@color/ColorSecundadrio"
        android:textSize="@dimen/text_size_title"
        android:id="@+id/titulo"
        android:layout_below="@+id/imageLogo"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titulo"
        android:layout_above="@id/scrollView"
        android:fadeScrollbars="false"
        android:id="@+id/scrollView">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutPadre"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >






            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/linearLayoutPasswordActual">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPassword"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="10"
                    android:hint="@string/antigua_password"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/password_actual"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:id="@+id/linearLayout4">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPassword"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="10"
                    android:hint="@string/new_password"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/password"
                    />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="start"
                android:id="@+id/linearLayout5">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textPassword"
                    android:ems="10"
                    android:textSize="@dimen/text_size_subtitle"
                    android:id="@+id/password2"
                    android:hint="@string/repeat_new_password"

                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>



</RelativeLayout>