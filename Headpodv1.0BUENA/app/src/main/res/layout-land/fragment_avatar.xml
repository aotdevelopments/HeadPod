<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/contenedor"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center_horizontal"
android:orientation="vertical"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#ffffff"
tools:context=".fragments.AvatarFragment">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="@string/avatar"
    android:visibility="gone"
    android:textColor="@color/ColorSecundadrio"
    android:textSize="@dimen/text_size_title"
    android:id="@+id/tituloMenuHome"
    android:layout_below="@+id/imageLogo"
    android:layout_marginTop="16dp"
    android:gravity="center_horizontal"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true" />


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:layout_gravity="center"
    android:id="@+id/scrollView"
    android:fillViewport="false"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayoutPadre"
        android:paddingBottom="@dimen/activity_vertical_margin"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <ImageView
            android:id="@+id/cara_inclinacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descripcion_button"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cabeza_inclinacion"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tituloMenuHome" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorSecundadrio"
            android:textSize="@dimen/text_size_subtitle"
            android:gravity="center_horizontal"
            android:text="4ยบ"
            android:layout_marginBottom="58dp"

            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/linearLayout10"
            android:layout_centerVertical="true" >

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:id="@+id/relativeLayout5" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="7"
                    android:text="@string/convulsiones"
                    android:textColor="@color/ColorSecundadrio" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/textView5"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="8"
                    android:gravity="center_horizontal"
                    android:text="5"
                    android:textColor="@color/ColorSecundadrio" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_below="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="7"
                    android:text="@string/velocidad_media"
                    android:textColor="@color/ColorSecundadrio" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_toEndOf="@+id/textView7"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="8"
                    android:gravity="center_horizontal"
                    android:text="2m/s"
                    android:textColor="@color/ColorSecundadrio" />
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/cara_flexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descripcion_button"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/cabeza_flexion"

            android:layout_alignTop="@+id/tituloMenuHome"
            android:layout_alignStart="@+id/tituloMenuHome" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ColorSecundadrio"
            android:textSize="@dimen/text_size_subtitle"
            android:gravity="center_horizontal"
            android:text="4ยบ"
            android:layout_marginBottom="53dp"
            android:layout_above="@+id/relativeLayout3"
            android:layout_toEndOf="@+id/cara_inclinacion"
            android:layout_marginStart="53dp" />


    </LinearLayout>






</ScrollView>




</RelativeLayout>