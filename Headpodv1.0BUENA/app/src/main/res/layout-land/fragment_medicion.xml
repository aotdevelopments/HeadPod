<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:gravity="center_vertical"

    android:layout_centerInParent="true"

    android:background="#ffffff"
    tools:context=".fragments.MedicionFragment">


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/linearLayout4">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:layout_gravity="center_vertical"
                        >

                        <ImageView
                            android:contentDescription="@string/descripcion_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnMedicionSinHP"
                            android:src="@drawable/btn_efectos"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.17"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_left_home"
                        android:id="@+id/relativeLayout1">


                        <TextView
                            android:id="@+id/txtMedicionSinHp"

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_subtitle"
                            android:layout_gravity="center_vertical"
                            android:ems="6"
                            android:gravity="center_vertical"
                            android:text="@string/medicion_sin_hp"
                            android:textColor="@color/txt_efecto2"

                            />

                        <TextView
                            android:id="@+id/txtMedicionSinHpContenido"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_standard"
                            android:ems="6"
                            android:gravity="center_vertical"
                            android:text="@string/ver_foto_ejemplo"
                            android:textColor="@color/txt_efectos"


                       />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.28"

                        android:gravity="center"
                        >


                        <ImageView
                            android:id="@+id/cara_sin_hp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:contentDescription="@string/descripcion_button"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:layout_gravity="center"
                            android:src="@drawable/medicion_sin_headpod_276"

                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.50"

                android:id="@+id/linearLayout5">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:layout_gravity="center_vertical"
                        >

                        <ImageView
                            android:contentDescription="@string/descripcion_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/btnMedicion"
                            android:src="@drawable/btn_efectos"
                            android:layout_gravity="center_vertical"
                            />



                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.17"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/margin_left_home"
                        android:id="@+id/relativeLayout">




                        <TextView
                            android:id="@+id/txtMedicionConHp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="@dimen/text_size_subtitle"
                            android:ems="6"
                            android:gravity="center_vertical"
                            android:text="@string/medicion_con_hp"
                            android:textColorHint="@color/colorPrimary"
                            android:textColor="@color/txt_efecto2"



                            />

                        <TextView
                            android:id="@+id/txtMedicionConHpContenido"


                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_standard"
                            android:ems="6"
                            android:gravity="center_vertical"
                            android:text="@string/ver_foto_ejemplo"

                            android:textColor="@color/txt_efectos"


                            />

                     </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.29"
                        android:gravity="center"
                        >

                        <ImageView
                            android:id="@+id/cara_con_hp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/descripcion_button"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/medicion_con_hp_276"
                            />




                    </LinearLayout>


                </LinearLayout>





            </LinearLayout>


</LinearLayout>



