<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenedor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"

    android:background="#ffffff"
    tools:context=".fragments.HomeFragment"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"

        android:gravity="center"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/Seleccione_op"
                android:textColor="@color/ColorSecundadrio"
                android:textSize="@dimen/text_size_title"
                android:id="@+id/tituloMenuHome"
                android:layout_marginTop="50dp"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"

                android:gravity="center_horizontal"

                /><!--
         android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        -->


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin"
            >



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"

                android:gravity="center_horizontal"
                android:id="@+id/linearLayoutCentral">

                <ImageView
                    android:id="@+id/btnAvatar"
                    android:contentDescription="@string/descripcion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_efectos"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    />

                <TextView
                    android:id="@+id/txtAvatar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/margin_left_home"
                    android:paddingEnd="@dimen/margin_left_home"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/op_avatar"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/txt_efecto2"
                    />



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"

                android:gravity="center_horizontal"

                android:id="@+id/linearLayout1">





                <ImageView
                    android:id="@+id/btnMedicion"
                    android:contentDescription="@string/descripcion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_efectos"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    />

                <TextView
                    android:id="@+id/txtMedicion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/margin_left_home"
                    android:paddingEnd="@dimen/margin_left_home"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/op_inicar_medicion"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/txt_efecto2"
                    />





            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"


                android:gravity="center_horizontal"
                android:id="@+id/linearLayout2">

                <ImageView
                    android:id="@+id/btnMisPacientes"
                    android:contentDescription="@string/descripcion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_efectos"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    />

                <TextView
                    android:id="@+id/txtMisPacientes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/margin_left_home"
                    android:paddingEnd="@dimen/margin_left_home"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/op_mis_pacientes"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/txt_efecto2"
                    />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"



                android:gravity="center_horizontal"
                android:id="@+id/linearLayout4">

                <ImageView
                    android:id="@+id/btnInforme"
                    android:contentDescription="@string/descripcion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_efectos"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    />

                <TextView
                    android:id="@+id/txtInforme"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingStart="@dimen/margin_left_home"
                    android:paddingEnd="@dimen/margin_left_home"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:text="Ver informe"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/txt_efecto2"
                    />
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="16dp"



                android:gravity="center_horizontal"
                android:id="@+id/linearLayout5">

                <ImageView
                    android:id="@+id/btnInformeCoparativo"
                    android:contentDescription="@string/descripcion_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_efectos"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    />

                <TextView
                    android:id="@+id/txtInformeCoparativo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/margin_left_home"
                    android:paddingEnd="@dimen/margin_left_home"
                    android:textSize="@dimen/text_size_subtitle"
                    android:ems="10"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal"
                    android:text="Ver informe comparativo"
                    android:textColorHint="@color/colorPrimary"
                    android:textColor="@color/txt_efecto2"
                    />
            </LinearLayout>









        </LinearLayout>





    </LinearLayout>





</RelativeLayout>